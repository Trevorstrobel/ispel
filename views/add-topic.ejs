<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">

    <script>
        function keywordInput(keywordInpt)
        {
            if (keywordInpt.value.length>0){
                document.getElementById('keywords').disabled = true;
            } else 
            {
                document.getElementById('keywords').disabled = false;
            }
        }
        function aliasInput(aliasInpt)
        {
            if (aliasInpt.value.length>0){
                document.getElementById('aliases').disabled = true;
            } else 
            {
                document.getElementById('aliases').disabled = false;
            }
        }
    </script>
</head>

<body>
   <%- include('./includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/author/add-topic" method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="domain">Domain Name</label>
                <input type="text" name="domain" id="domain">
            </div>
            <div class="form-control">
                <label for="area">Topic Area</label>
                <input type="text" name="area" id="area">
            </div>
            <div class="form-control">
                <label for="name">Topic Name</label>
                <input type="text" name="name" id="name">
            </div>
            <div class="form-control">
                <label for="topicId">Topic ID | to be auto-generated</label>
                <input type="text" name="topicId" id="topicId">
            </div>
            <div class="form-control">
                <label for="difficulty">Difficulty</label>
                <input type="number" name="difficulty" id="difficulty">
            </div>
            <div class="form-control">
                <label for="keywords">Keywords</label>
                <input list="keywords" name="keyword" id="keyword" onchange="keywordInput(this)">
                <select name="keywords" id="keywords" size="4" multiple>
                    <%console.log(allKeywords)%>
                    <% for (const i in allKeywords) {%>
                        <option value="<%=allKeywords[i].id%>"><%= allKeywords[i].value%></option>
                        <%}%>
                </select>
                
            </div>
            <div class="form-control">
                <label for="aliases">Aliases</label>
                <input list="aliases" name="alias" id="alias" onchange="aliasInput(this)">
                <select name="aliases" id="aliases" size="4" multiple>
                    <%console.log(allAliases)%>
                    <% for (const j in allAliases) {%>
                        <option value="<%=allAliases[j].id%>"><%= allAliases[j].value%></option>
                        <%}%>
                </select>
            </div>
            <div class="form-control">
                <label for="paragraph">Teaser</label>
                <textarea name="paragraph" id="paragraph" rows="5"></textarea>
            </div>
            <div class="form-control">
                <label for="content">Content</label>
                <textarea name="content" id="content" rows="5"></textarea>
            </div>

            <div class="form-control">
                <label for="contentUpload">Content file</label>
                <input
                type="file"
                name="contentUpload"
                id="contentUpload"
                accept=".html"
                >

            </div>

            <button class="btn" type="submit">Add Topic</button>
        </form>
    </main>
<%- include('./includes/end.ejs') %>