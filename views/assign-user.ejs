<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
 

    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>

            <div class="container py-5">
                <div class="row">
                    <div class="col-md-12 mx-auto">
                        <form action="/admin/assign-user" method="POST" enctype="multipart/form-data">
                            <div class="form-group row">

                                <div class="col-sm-6">
                                    <label for="userId">User Name</label>
                                    <select type="text" class="form-control" name="userId" id="userId">
                                        <% for (const i in users) {%>
                                            <option value="<%=users[i].id%>">
                                                <%= (users[i].firstName+' '+users[i].lastName)%>
                                            </option>
                                            <%}%>
                                    </select>

                                </div>
                                <div class="col-sm-6">
                                    <label for="domainIds">Domains</label>
                                    <select type="text" class="selectpicker" multiple size="5" style="width: 100%;" name="domainIds" id="domainIds">
                                        <% for (const i in domains) {%>
                                            <option value="<%=domains[i].id%>">
                                                <%=domains[i].name%>
                                            </option>
                                            <%}%>
                                    </select>

                                </div>


                            </div>


                            <button type="submit" class="btn btn-primary px-4 float-right">Assign User</button>
                        </form>
                    </div>
                </div>
            </div>

            <%- include('./includes/end.ejs') %>